# EV Charging Diagnostic Chatbot
# Environment Configuration

# Application
APP_NAME=EV Charging Diagnostic Chatbot
APP_VERSION=1.0.0
DEBUG=False

# API
API_V1_PREFIX=/v1
CORS_ORIGINS=["*"]

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ev_chatbot_db
MONGODB_MAX_CONNECTIONS=10
MONGODB_MIN_CONNECTIONS=1

# Session
SESSION_TIMEOUT_MINUTES=30

# AI Service (OpenAI Integration)
# Uncomment and set when ready to use OpenAI:
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4
# OPENAI_TEMPERATURE=0.7
# OPENAI_MAX_TOKENS=500

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Knowledge Base Paths
ERROR_CODES_PATH=error_codes_complete.json
FLOWS_PATH=chatbot/flows/chatbot_flows.json
